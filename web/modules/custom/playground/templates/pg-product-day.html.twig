{{ attach_library('playground/product-cta') }}
{{ title }}
{% if node %}
  {{ node.title.value }}
  {{ node.body.value |raw }}
  {% if node.field_media_image is not empty %}
    {% set media = node.field_media_image.entity %}
    {% if media %}
      {% set image_alt = media.field_media_image.alt %}
      
      <img src="{{ image }}" alt="{{ image_alt }}">
    {% endif %}
  {% endif %}

  <a class='product-cta' data-id='{{ node.id }}'>CTA</a>
{% endif %}
